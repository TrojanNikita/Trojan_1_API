# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.getTodos


# Computers list (look at the default values for pagination parameters)




# Edit existing computer
GET     /todos                  controllers.HomeController.getTodos
POST    /todos/new              controllers.HomeController.addTodo

PUT    /todos/update        controllers.HomeController.updateAllDone
DELETE  /todos               controllers.HomeController.deleteAllDone
GET     /todos/:id            controllers.HomeController.getTodo(id:Long)
PUT    /todos/:id            controllers.HomeController.updateTodo(id:Long)
PUT    /todos/:id/change     controllers.HomeController.updateTodoDone(id:Long)
PUT    /todos/:id/priority   controllers.HomeController.updateTodoPriority(id:Long)
DELETE  /todos/:id           controllers.HomeController.deleteTodo(id:Long)





# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
